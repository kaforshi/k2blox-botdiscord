# Token bot Discord Anda
DISCORD_TOKEN=your_bot_token_here

# ID Guild (Server) Discord
GUILD_ID=your_guild_id_here

# ID Channel default untuk mengirim embed (opsional, jika tidak ada akan menggunakan channel saat ini)
DEFAULT_CHANNEL_ID=your_channel_id_here

# ===========================================
# KONFIGURASI OPSIONAL
# ===========================================

# Warna default untuk embed (format hex, contoh: #0099ff)
DEFAULT_EMBED_COLOR=#0099ff

# Nama bot yang akan muncul di embed footer (opsional)
BOT_NAME=K2Blox Bot

# URL avatar bot untuk embed (opsional)
BOT_AVATAR_URL=https://example.com/bot-avatar.png

# ===========================================
# KONFIGURASI PERMISSIONS
# ===========================================

# Set ke true jika ingin bot hanya bisa digunakan oleh admin
ADMIN_ONLY=false

# ID role yang diizinkan menggunakan bot (pisahkan dengan koma jika multiple)
ALLOWED_ROLES=123456789,987654321

# ===========================================
# KONFIGURASI LOGGING
# ===========================================

# Set ke true untuk enable logging ke console
ENABLE_LOGGING=true

# Set ke true untuk log setiap command yang dijalankan
LOG_COMMANDS=true
